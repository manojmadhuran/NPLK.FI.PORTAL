<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/lblcuscode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:textStyle="normal"
        android:textColor="@color/colorBlack"
        android:text="Customer code"
        />

    <TextView
        android:id="@+id/lblcusname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:textColor="@color/colorBlack"
        android:textSize="18dp"
        android:text="Customer Name" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lblenhancexx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current credit Limit : "
            android:fontFamily="monospace"
            android:textStyle="normal"
            android:textColor="@color/colorBlack"
            />

        <TextView
            android:id="@+id/lblenhancex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs: "
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:layout_toRightOf="@+id/lblenhancexx"
            />

        <TextView
            android:id="@+id/lblcurrlimit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:layout_toRightOf="@id/lblenhancex"
            />

    </RelativeLayout>
</LinearLayout>